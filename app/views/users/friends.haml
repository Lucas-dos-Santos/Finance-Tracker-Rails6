%h1.mt-3 Amigos
%hr
.search-area
 %h3.mb-3 Procurar Amigos
= form_tag search_friend_path, remote: true, method: :get do
 .form-group.row
  .col-sm-9.me-0.pe-0
   = text_field_tag :friend, params[:stock], placeholder: "Nome ou Email", autofocus: true, class: "form-control form-control-lg"
  .col-sm-3.ms-0.ps-0
   = button_tag class: "btn btn-success text-white" do 
    = fa_icon 'search 2x'

#results.mb-0.mt-0
.row.mt-3 
 .col-9 
  - unless @friends.empty?
   = render 'users/friends_table'