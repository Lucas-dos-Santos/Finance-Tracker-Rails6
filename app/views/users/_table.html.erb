<div class="row mt-3">
  <div class="col-9">
    <table class="table table-hover table-bordered mt-0 text-center">
      <thead>
        <tr>
          <th scope="col">Codigo</th>
          <th scope="col">Nome</th>
          <th scope="col">Preço US$</th>
          <th scope="col">Opções</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_stocks.each do |stock| %>
          <tr>
            <td> <%= stock.ticker.upcase %> </td>
            <td> <%= stock.name %> </td>
            <td> <%= stock.last_price.round(2) %> </td>
            <td> <%= link_to "Remover", user_stock_path(stock), method: :delete, data: {confirm: "Tem certeza?"}, class: "btn btn-sm btn-outline-danger" %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
